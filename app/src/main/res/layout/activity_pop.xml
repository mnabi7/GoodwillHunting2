<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/pop_color"
    tools:context=".controllers.PopActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/store_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_marginStart="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Address"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/store_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="City"
            app:layout_constraintEnd_toStartOf="@+id/store_state"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_address" />

        <TextView
            android:id="@+id/store_key"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Key"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_type" />

        <TextView
            android:id="@+id/store_state"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="300dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="State"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_address" />

        <TextView
            android:id="@+id/store_zip"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Zip"
            app:layout_constraintStart_toEndOf="@+id/store_state"
            app:layout_constraintTop_toBottomOf="@+id/store_address" />

        <TextView
            android:id="@+id/store_longitude"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="260dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Longitude"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_zip" />

        <TextView
            android:id="@+id/store_latitude"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Latitude"
            app:layout_constraintEnd_toStartOf="@+id/store_longitude"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_city" />

        <TextView
            android:id="@+id/store_phone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_latitude" />

        <TextView
            android:id="@+id/store_website"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Website"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_phone" />

        <TextView
            android:id="@+id/store_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_website" />
    </android.support.constraint.ConstraintLayout>



    <Button
        android:id="@+id/close_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="48dp"
        android:text="close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>